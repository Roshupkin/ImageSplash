<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/randomPhotoFragment">

    <fragment
        android:id="@+id/randomPhotoFragment"
        android:name="android.com.roshchupkin.unsplashapp.ui.fragment.ViewPagerFragment"
        android:label="ViewPagerFragment"
        tools:layout="@layout/fragment_viewpager">
        <action
            android:id="@+id/action_randomPhotoFragment_to_detailImageFragment"
            app:destination="@id/detailImageFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailImageFragment"
        android:name="android.com.roshchupkin.unsplashapp.ui.fragment.DetailImageFragment"
        android:label="DetailImageFragment"
        tools:layout="@layout/fragment_detail_image"/>
    <action android:id="@+id/action_global_detailImageFragment" app:destination="@id/detailImageFragment" />
    <fragment
        tools:layout="@layout/fragment_collection"
        android:id="@+id/collectionFragment"
        android:name="android.com.roshchupkin.unsplashapp.ui.fragment.CollectionFragment"
        android:label="CollectionFragment" >
        <action
            android:id="@+id/action_collectionFragment_to_imageFragment"
            app:destination="@id/imageFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_image"
        android:id="@+id/imageFragment"
        android:name="android.com.roshchupkin.unsplashapp.ui.fragment.ImageFragment"
        android:label="ImageFragment" /><action android:id="@+id/action_global_imageFragment" app:destination="@id/imageFragment"/>
</navigation>